import pandas as pd
import matplotlib.pyplot as plt
from sklearn.preprocessing import MinMaxScaler

file_path = "ZEDW_BUDGET_DASH_V.xlsx"  # Use the provided file

# Read the Excel file
df = pd.read_excel(file_path)

# Ensure required columns are present
required_cols = {'GJAHR', 'SHOP', 'BUDGET'}
if required_cols.issubset(df.columns):
    # Clean and prepare data
    df = df.dropna(subset=['GJAHR', 'SHOP', 'BUDGET'])
    df['GJAHR'] = df['GJAHR'].astype(str)
    df['BUDGET'] = pd.to_numeric(df['BUDGET'], errors='coerce').fillna(0)

    # Group by year and shop, summing the budget
    grouped = df.groupby(['GJAHR', 'SHOP'])['BUDGET'].sum().reset_index()

    # Pivot for plotting: rows=year, columns=shop, values=budget
    pivot = grouped.pivot(index='GJAHR', columns='SHOP', values='BUDGET').fillna(0)

    # Limit to top 10 shops, aggregate others
    top_n = 10
    top_shops = pivot.sum().sort_values(ascending=False).head(top_n).index
    pivot['Other'] = pivot.drop(columns=top_shops).sum(axis=1)
    filtered_pivot = pivot[list(top_shops) + ['Other']]

    # Apply Min-Max scaling to top shops only (scale each column between 0 and 1)
    main_shops = filtered_pivot.drop(columns='Other')
    scaler = MinMaxScaler()
    scaled_array = scaler.fit_transform(main_shops)
    scaled_main = pd.DataFrame(scaled_array, index=main_shops.index, columns=main_shops.columns)

    # Calculate scaled 'Other' as 1 minus the sum of scaled shops per year (to keep total ~1)
    scaled_main['Other'] = 1.0 - scaled_main.sum(axis=1)
    # Prevent negative due to floating point precision
    scaled_main[scaled_main < 0] = 0

    # Plot scaled data
    ax = scaled_main.plot(kind='line', marker='o', figsize=(16, 8))
    plt.xlabel('Year')
    plt.ylabel('Scaled Budget (0 to 1)')
    plt.title(f'Year-wise Scaled Budget by Shop (Top {top_n} + Other)\nUnit: Scaled (Min-Max)')

    # Add a textbox inside plot explaining units
    textstr = 'Budget values scaled to range [0,1] using Min-Max scaling\n(0 = min, 1 = max per shop)'
    props = dict(boxstyle='round', facecolor='wheat', alpha=0.5)
    ax.text(0.02, 0.95, textstr, transform=ax.transAxes, fontsize=10,
            verticalalignment='top', bbox=props)

    plt.legend(title='Shop', bbox_to_anchor=(1.05, 1), loc='upper left', fontsize='small')
    plt.tight_layout()
    plt.grid(axis='y', linestyle='--', alpha=0.7)
    plt.show()
else:
    print(f"Required columns {required_cols} not found in the Excel file.")
